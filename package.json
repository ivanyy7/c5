{
  "name": "calculator",
  "version": "1.0.0",
  "description": "Калькулятор с модульными тестами",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "build": "echo 'No build step required for static site'",
    "start": "npx http-server . -p 3000"
  },
  "keywords": [
    "calculator",
    "testing",
    "vitest"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@vitest/ui": "^2.1.8",
    "http-server": "^14.1.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
